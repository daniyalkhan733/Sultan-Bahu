---
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"
---

<!doctype html>
<html lang="en">
	<head>
		<!-- required meta -->
		<meta charset="UTF-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<!-- #favicon -->
		<link rel="shortcut icon" href="/assets/images/favicon.png" type="image/x-icon">
		<link rel="icon" href="/assets/images/favicon.png" type="image/x-icon">
		<!-- #title -->
		<title>Charifund | Nonprofit NGO Fundraising HTML5 Template</title>
		<!-- #keywords -->
		<meta name="keywords" content="charity, nonprofit, fundraising, donation, html, bootstrap, scss">
		<!-- #description -->
		<meta name="description" content="Nonprofit NGO Fundraising HTML5 Template">
		<!-- google fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link
		   href="https://fonts.googleapis.com/css2?family=Caveat:wght@400..700&family=Nunito+Sans:ital,opsz,wght@0,6..12,200..1000;1,6..12,200..1000&family=Nunito:ital,wght@0,200..1000;1,200..1000&family=Outfit:wght@100..900&display=swap"
		   rel="stylesheet">
		<!-- main css -->
		<link rel="stylesheet" href="/assets/css/main.css">
		<!-- responsive css -->
		<link rel="stylesheet" href="/assets/css/responsive.css">
		<!-- color themes -->
		<link rel="stylesheet" href="/assets/css/default-theme.css">
  
	 </head>
	 <Header />
	<body>
		<slot />
	</body>
	<Footer />
	      <!-- ==== js dependencies start ==== -->
      <!-- jquery -->
      <script is:inline src="/assets/js/jquery-3.7.1.min.js"></script>
      <!-- bootstrap five js -->
      <script is:inline src="/assets/js/bootstrap.bundle.min.js"></script>
      <!-- nice select js -->
      <script is:inline src="/assets/js/jquery.nice-select.min.js"></script>
      <!-- magnific popup js -->
      <script is:inline src="/assets/js/jquery.magnific-popup.min.js"></script>
      <!-- swiper slider js -->
      <script is:inline src="/assets/js/swiper-bundle.min.js"></script>
      <!-- viewport js -->
      <script is:inline src="/assets/js/viewport.jquery.js"></script>
      <!-- odometer js -->
      <script is:inline src="/assets/js/odometer.min.js"></script>
      <!-- vanilla tilt js -->
      <script is:inline src="/assets/js/vanilla-tilt.min.js"></script>
      <!-- aos js -->
      <script is:inline src="/assets/js/aos.js"></script>

      <!-- splittext js -->
      <script is:inline src="/assets/js/SplitText.min.js"></script>
      <!-- scrollto js -->
      <script is:inline src="/assets/js/ScrollToPlugin.min.js"></script>
      <!-- scrolltrigger js -->
      <script is:inline src="/assets/js/ScrollTrigger.min.js"></script>
      <!-- gsap js -->
      <script is:inline src="/assets/js/gsap.min.js"></script>
      <!-- ==== / js dependencies end ==== -->

      <!-- main js -->
      <script is:inline src="/assets/js/custom.js"></script>
</html>

